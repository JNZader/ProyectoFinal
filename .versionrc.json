{
    "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.",
    "skip": {
      "commit": true,
      "tag": true,
      "changelog": false
    },
    "types": [
      {"type": "feat", "section": "✨ Features"},
      {"type": "fix", "section": "🐛 Bug Fixes"},
      {"type": "docs", "section": "📚 Documentation"},
      {"type": "style", "section": "💅 Styles", "hidden": true},
      {"type": "refactor", "section": "🔨 Code Refactoring"},
      {"type": "perf", "section": "⚡ Performance Improvements"},
      {"type": "test", "section": "🧪 Tests", "hidden": true},
      {"type": "build", "section": "📦 Build System"},
      {"type": "ci", "section": "🔧 CI Configuration"},
      {"type": "chore", "section": "🧹 Chores", "hidden": true},
      {"type": "revert", "section": "⏪ Reverts"}
    ],
    "commitUrlFormat": "https://github.com/JNZader/ProyectoFinal/commit/{{hash}}",
    "compareUrlFormat": "https://github.com/JNZader/ProyectoFinal/compare/{{previousTag}}...{{currentTag}}",
    "issueUrlFormat": "https://github.com/JNZader/ProyectoFinal/issues/{{id}}",
    "userUrlFormat": "https://github.com/{{user}}",
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "package-lock.json",
        "type": "json"
      }
    ],
    "packageFiles": [
      "package.json"
    ],
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  }